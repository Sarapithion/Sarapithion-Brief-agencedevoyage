{% extends 'base.html.twig' %}

{% block title %}AdvUser index{% endblock %}

{% block body %}
    <h1>AdvUser index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Mail</th>
                <th>Téléphone</th>
                <th>Mdp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adv_user in adv_users %}
            <tr>
                <td>{{ adv_user.id }}</td>
                <td>{{ adv_user.Nom }}</td>
                <td>{{ adv_user.Prénom }}</td>
                <td>{{ adv_user.Mail }}</td>
                <td>{{ adv_user.Téléphone }}</td>
                <td>{{ adv_user.Mdp }}</td>
                <td>
                    <a href="{{ path('app_adv_user_show', {'id': adv_user.id}) }}">show</a>
                    <a href="{{ path('app_adv_user_edit', {'id': adv_user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_adv_user_new') }}">Create new</a>
{% endblock %}
